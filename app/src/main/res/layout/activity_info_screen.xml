<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info_screen"
    android:background="@drawable/backgroundinfo">

    <ImageView
        android:layout_width="220dp"
        android:id="@+id/fotoInfo"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:layout_height="220dp"
        android:src="@drawable/fotoinfo"/>

    <TextView
        android:layout_width="200dp"
        android:layout_marginTop="40dp"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fotoInfo"
        android:textSize="17dp"
        android:textStyle="bold"
        android:text="Hai, Nama saya Rizky Andika Apriansyah selaku pembuat aplikasi ruang hitung. Aplikasi ini dibuat untuk memenuhi tugas besar Ujian Tengah Semester saya, mohon maaf bila masih banyak kekurangan dari aplikasi ini. Terima kasih."/>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_home"
        android:text="Home"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:paddingHorizontal="90dp"
        android:paddingVertical="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>